{
  "extends": "../../tsconfig.json", 
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "rootDir": "./src", 
    "composite": true      
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/__tests__/*"]
}