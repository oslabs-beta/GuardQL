{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "target": "ES6",
    "module": "NodeNext",
    "strict": true,
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
  },
"include": ["./src/**/*"],
"exclude": ["node_modules", "dist"],
}

